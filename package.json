{
  "name": "drawchim",
  "version": "0.0.1",
  "description": "DrawChim is a simple html5 based draw application. I made it for my son.",
  "main": "index.js",
  "dependencies": {
    "http-server": "^0.9.0"
  },
  "devDependencies": {
    "browserify": "^13.1.0",
    "chai": "^3.3.0",
    "domquery": "^3.0.0",
    "mocha": "^3.1.2",
    "mocha-phantomjs-core": "^2.1.1",
    "modalblanc": "^1.1.1",
    "phantomjs": "^2.1.7",
    "touchy": "^0.1.6",
    "uglify-js": "^2.6.1",
    "watchify": "^3.6.1"
  },
  "scripts": {
    "watch": "npm run watch-scss & npm run watch-js & http-server",
    "watch-js": "watchify index.js -d --s Drawchim -o dist/drawchim.js -v",
    "watch-scss": "sass --watch styles:dist",
    "build-debug": "browserify index.js -d --s Drawchim > dist/drawchim.js",
    "build-min": "browserify index.js --s Drawchim | uglifyjs -c > dist/drawchim.min.js",
    "build-js": "npm run build-debug && npm run build-min",
    "build-css": "sass styles/drawchim.scss dist/drawchim.css",
    "build-files": "npm run build-js && npm run build-css",
    "test-phantom": "make test",
    "test-mocha": "./bin/mocha-phantomjs testRunner.html",
    "test": "npm run build-min && npm run test-phantom && npm run test-mocha"
  },
  "bin": "bin/phantomjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JhonM/DrawChim.git"
  },
  "keywords": [
    "Javascript",
    "drawchim"
  ],
  "author": "Jhon Majoor <jhonmajoor@gmail.com> (http://blancframe.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JhonM/DrawChim/issues"
  },
  "homepage": "https://github.com/JhonM/DrawChim#readme"
}
